<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hot_background2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_typepicture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hot_mofang"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:text="大咖模仿"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="25dp"
            android:focusable="false"
            android:text="查看更多"
            android:textColor="@color/main_color"
            android:textSize="11sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="8dp"
            android:focusable="false"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginRight="8dp"
        android:columnCount="2"
        android:rowCount="2" >
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/picture_border"
            android:layout_gravity="fill_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_picture1"
                android:scaleType="fitXY"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:focusable="false"
                android:src="@drawable/hot01" />
            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="疯狂动物城" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:padding="0dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/hot_play_num" />

                <TextView
                    android:id="@+id/tv_playnum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="12sp"
                    android:text="566" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/hot_good" />

                <TextView
                    android:id="@+id/tv_likenum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="12sp"
                    android:text="233" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/picture_border"
            android:layout_gravity="fill_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_picture2"
                android:scaleType="fitXY"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:src="@drawable/hot02" />
            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="生活大爆炸" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:padding="0dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/hot_play_num" />

                <TextView
                    android:id="@+id/tv_playnum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="12sp"
                    android:text="566" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/hot_good" />

                <TextView
                    android:id="@+id/tv_likenum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="12sp"
                    android:text="233" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/picture_border"
            android:layout_gravity="fill_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_picture3"
                android:scaleType="fitXY"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:src="@drawable/hot03" />
            <TextView
                android:id="@+id/tv_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:padding="0dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/hot_play_num" />

                <TextView
                    android:id="@+id/tv_playnum3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="12sp"
                    android:text="566" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/hot_good" />

                <TextView
                    android:id="@+id/tv_likenum3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="12sp"
                    android:text="233" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/picture_border"
            android:layout_gravity="fill_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_picture4"
                android:scaleType="fitXY"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:src="@drawable/hot02" />
            <TextView
                android:id="@+id/tv_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:padding="0dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/hot_play_num" />

                <TextView
                    android:id="@+id/tv_playnum4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="12sp"
                    android:text="566" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/hot_good" />
                <TextView
                    android:id="@+id/tv_likenum4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="12sp"
                    android:text="233" />
            </LinearLayout>
        </LinearLayout>
    </GridLayout>
</LinearLayout>